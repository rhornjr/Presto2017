@model IEnumerable<PrestoCommon.Entities.Application>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="~/Content/jquery.mobile-1.3.2.min.css" rel="stylesheet" />    
    <title>Presto</title>
      
    
  </head>

    <body>
      
        <div data-role="header" data-theme="b">
            <h1>Presto</h1>
        </div>

        <div data-role="navbar" data-grid="d">
            <ul>
                <li onclick="showApps()"><a href="#" class="ui-btn-active">Apps</a></li>
                <li onclick="showServers()"><a href="#">Servers</a></li>
                <li><a href="#">Variables</a></li>
                <li><a href="#">Resolve</a></li>
                <li><a href="#">Installs</a></li>
                <li><a href="#">Log</a></li>
                <li><a href="#">Ping</a></li>
                <li><a href="#">Global</a></li>
                <li><a href="#">Security</a></li>
            </ul>
        </div><!-- /navbar -->
      
        <div data-role="header">
            <h1>---</h1>
        </div>

        <div id="appList">
            @Html.Partial("~/Views/PartialViews/AppList.cshtml", Model)
        </div>
      
        <div id="serverList">
            @Html.Partial("~/Views/PartialViews/ServerList.cshtml")
        </div>

        <!-- Placed at the end of the document so the pages load faster -->
        <script src="~/Scripts/jquery-1.8.2.min.js"></script>
        <script src="~/Scripts/jquery.mobile-1.3.2.min.js"></script>      
    </body>
    <script>
        $(function () {
            $('#serverList').hide();
        });

        function showApps() {
            hideAll();
            $('#appList').show();
        }

        function showServers() {
            hideAll();
            $('#serverList').show();
        }

        function hideAll() {
            $('#appList').hide();
            $('#serverList').hide();
        }
    </script>
</html>